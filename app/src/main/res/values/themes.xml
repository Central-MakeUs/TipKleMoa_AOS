<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipKle" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="background">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorPrimary">@color/mint</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#C4C4C4</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="home_tabtext_style" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/notosanscjkkr_medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#979797</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="search_tabtext_style" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#979797</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">#DFF8F6</item>
        <item name="colorControlActivated">@color/mint</item>
    </style>

    <style name="searchView" parent="Widget.AppCompat.SearchView">
        <item name="android:queryHint">"검색어를 입력하세요."</item>
        <item name="android:background">@drawable/ic_search_box</item>
        <item name="android:searchIcon">@drawable/ic_search_icon</item>
    </style>
</resources>